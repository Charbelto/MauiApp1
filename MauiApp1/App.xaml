<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.App">
    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="App">App</x:String>
            <Color x:Key="LightBlueColor">#C2CAFF</Color>
            <Color x:Key="DarkBlueColor">#001394</Color>
            <Style x:Key="LightBlueStyle" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource LightBlueColor}"/>
            </Style>
            <Style x:Key="DarkBlueStyle" TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{StaticResource DarkBlueColor}"/>
            </Style>
            <!-- Add other resources here if needed -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
