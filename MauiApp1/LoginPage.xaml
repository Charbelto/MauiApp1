<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.LoginPage">

    <StackLayout Padding="30">
        <Entry x:Name="UsernameEntry" Placeholder="{DynamicResource Username}" Margin="0,0,0,10" />
        <Entry x:Name="PasswordEntry" Placeholder="{DynamicResource Password}" IsPassword="True" Margin="0,10,0,0" />
        <Button Text="{DynamicResource Login}" Clicked="OnLoginButtonClicked" Margin="0,20,0,0" />
        <Button Text="{DynamicResource Go To Sign Up}" Clicked="OnGoToSignUpButtonClicked" Margin="0,10,0,0" />
    </StackLayout>

</ContentPage>
